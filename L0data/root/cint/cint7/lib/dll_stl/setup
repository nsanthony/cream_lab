#!/bin/bash

# --builddir $CINTSYSDIR option added to makecint everywhere; D. Barna
# CINTSYSDIR should be set to the actual build directory (done by the upmost Makefile)

if [ "$CINTSYSDIR" = "" ] ; then
  echo CINTSYSDIR should be set to the actual build directory during the compilation of cint
  exit 1
fi

# Comment out following line to precompile generic algorithm. But, be careful
# for doing that. Your compiler may not support certain algorithm function.
ALGO=-DG__NOALGORITHM


rm -f ../../stl/*.dll G__*

#makecint --builddir $CINTSYSDIR -mk Makeiter -dl iterator.dll -H iter.h  -cint -Z0
#make -f Makeiter
#mv iterator.dll ../../stl/iterator.dll

../../../bin/makecint --builddir $CINTSYSDIR -mk Makestr -dl string.dll -H str.h -cint -Z0
make -f Makestr
mv string.dll ../../stl/string.dll

../../../bin/makecint --builddir $CINTSYSDIR -mk Makevec -dl vector.dll $ALGO -H vec.h  -cint -Z0
make -f Makevec
mv vector.dll ../../stl/vector.dll

../../../bin/makecint --builddir $CINTSYSDIR -mk Makevecbool -dl vectorbool.dll $ALGO -H vecbool.h  -cint -Z0
make -f Makevecbool
mv vectorbool.dll ../../stl/vectorbool.dll

../../../bin/makecint --builddir $CINTSYSDIR -mk Makelist -dl list.dll $ALGO -H lst.h  -cint -Z0
make -f Makelist 
mv list.dll ../../stl/list.dll

../../../bin/makecint --builddir $CINTSYSDIR -mk Makedeque -dl deque.dll $ALGO -H dqu.h  -cint -Z0
make -f Makedeque
mv deque.dll ../../stl/deque.dll

###
#makecint --builddir $CINTSYSDIR -mk Makepair -dl pair.dll $ALGO -H Pr.h -cint -Z0
#make -f Makepair
#mv pair.dll ../../stl/pair.dll
###

../../../bin/makecint --builddir $CINTSYSDIR -mk Makemap -dl map.dll $ALGO -H mp.h  -cint -Z0
make -f Makemap 
mv map.dll ../../stl/map.dll

../../../bin/makecint --builddir $CINTSYSDIR -mk Makemap2 -dl map2.dll $ALGO -DG__MAP2 -H mp.h  -cint -Z0
make -f Makemap2 
mv map2.dll ../../stl/map2.dll

../../../bin/makecint --builddir $CINTSYSDIR -mk Makeset -dl set.dll $ALGO -H st.h  -cint -Z0
make -f Makeset
mv set.dll ../../stl/set.dll

../../../bin/makecint --builddir $CINTSYSDIR -mk Makemmap -dl multimap.dll $ALGO -H multmp.h  -cint -Z0
make -f Makemmap 
mv multimap.dll ../../stl/multimap.dll

../../../bin/makecint --builddir $CINTSYSDIR -mk Makemmap2 -dl multimap2.dll $ALGO -DG__MAP2 -H multmp.h  -cint -Z0
make -f Makemmap2
mv multimap2.dll ../../stl/multimap2.dll

../../../bin/makecint --builddir $CINTSYSDIR -mk Makemset -dl multiset.dll $ALGO -H multst.h  -cint -Z0
make -f Makemset
mv multiset.dll ../../stl/multiset.dll

../../../bin/makecint --builddir $CINTSYSDIR -mk Makestk -dl stack.dll -H stk.h  -cint -Z0
make -f Makestk
mv stack.dll ../../stl/stack.dll

../../../bin/makecint --builddir $CINTSYSDIR -mk Makeque -dl queue.dll -H que.h  -cint -Z0
make -f Makeque
mv queue.dll ../../stl/queue.dll

../../../bin/makecint --builddir $CINTSYSDIR -mk Makevary -dl valarray.dll -H vary.h  -cint -Z0
make -f Makevary
mv valarray.dll ../../stl/valarray.dll

../../../bin/makecint --builddir $CINTSYSDIR -mk Makeeh -dl exception.dll -H cinteh.h -cint -Z0
make -f Makeeh
mv exception.dll ../../stl/exception.dll

../../../bin/makecint --builddir $CINTSYSDIR -mk Makese -dl stdexcept.dll -H se.h -cint -Z0
make -f Makese
mv stdexcept.dll ../../stl/stdexcept.dll

../../../bin/makecint --builddir $CINTSYSDIR -mk Makeclimits -dl climits.dll -H clim.h -cint -Z1
make -f Makeclimits
mv climits.dll ../../stl/climits.dll

../../../bin/makecint --builddir $CINTSYSDIR -mk Makecomplex -dl complex.dll -H cmplx.h -cint -Z1
make -f Makecomplex
mv complex.dll ../../stl/complex.dll

#rm G__*
#rm Make*
